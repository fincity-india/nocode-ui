{
	"name": "nocode-ui",
	"version": "1.0.0",
	"description": "UI Engine for NoCode SaaS Platform",
	"source": "src/index.html",
	"browserslist": "> 0.5%, last 2 versions, not dead",
	"scripts": {
		"start": "parcel --no-cache",
		"build": "parcel build src/index.html",
		"aws": "parcel build src/index.tsx",
		"test": "jest --watchAll",
		"coverage": "jest --coverage",
		"pretty": "prettier --write ./src || prettier --write ./__tests__"
	},
	"keywords": [
		"nocode",
		"lowcode"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		],
		"*.{html,css,less,ejs}": [
			"prettier --write",
			"git add"
		]
	},
	"author": "Raja Avinash Alli",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.12.0",
		"@babel/preset-typescript": "^7.18.6",
		"@types/jest": "^28.1.8",
		"@types/react": "^18.0.17",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.33.0",
		"buffer": "^6.0.3",
		"eslint": "^8.21.0",
		"eslint-plugin-react": "^7.30.1",
		"husky": "^8.0.1",
		"jest": "^28.1.2",
		"lint-staged": "^13.0.3",
		"parcel": "^2.7.0",
		"prettier": "^2.7.1",
		"process": "^0.11.10",
		"ts-jest": "^28.0.5"
	},
	"dependencies": {
		"@fincity/kirun-js": "^1.6.11",
		"@fincity/path-reactive-state-management": "^1.6.4",
		"@monaco-editor/react": "^4.4.6",
		"@tsconfig/recommended": "^1.0.1",
		"axios": "^0.27.2",
		"monaco-editor": "^0.35.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.3.0"
	},
	"jest": {
		"transform": {
			".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"globals": {
			"window": {}
		}
	}
}
